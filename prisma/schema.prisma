// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator valibot {
  provider = "node dist/bin.cjs"
  output   = "./generated/valibot"
}

datasource db {
  provider = "postgresql"
}

// --- Enums ---
enum Role {
  USER
  ADMIN
  GUEST
}

// --- Scalars Model ---
model ScalarTypes {
  id String @id @default(cuid())

  // Basic Scalars
  string   String
  int      Int
  float    Float
  boolean  Boolean
  dateTime DateTime
  json     Json
  bytes    Bytes
  bigInt   BigInt
  decimal  Decimal

  // Nullable Scalars
  stringOpt   String?
  intOpt      Int?
  floatOpt    Float?
  booleanOpt  Boolean?
  dateTimeOpt DateTime?
  jsonOpt     Json?
  bytesOpt    Bytes?
  bigIntOpt   BigInt?
  decimalOpt  Decimal?

  // List Scalars
  stringList   String[]
  intList      Int[]
  floatList    Float[]
  booleanList  Boolean[]
  dateTimeList DateTime[]
  jsonList     Json[]
  bytesList    Bytes[]
  bigIntList   BigInt[]
  decimalList  Decimal[]

  // Enum
  role     Role
  roleOpt  Role?
  roleList Role[]
}

// --- Relations ---

// 1:1 Relation (User <-> Profile)
model User {
  id      String   @id @default(cuid())
  email   String   @unique
  profile Profile?
}

model Profile {
  id     String  @id @default(cuid())
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId String  @unique
}

// File model for testing nested relations
model File {
  id      String   @id @default(cuid())
  url     String
  authors Author[]
}

// 1:N Relation (Author <-> Post)
model Author {
  id        String    @id @default(cuid())
  name      String
  avatarId  String?
  avatar    File?     @relation(fields: [avatarId], references: [id])
  posts     Post[]
  articles  Article[] @relation("ArticleAuthor")
}

model Post {
  id       String @id @default(cuid())
  title    String
  author   Author @relation(fields: [authorId], references: [id])
  authorId String
}

// Article with optional author (like your ProductSEO case)
model Article {
  id        String   @id @default(cuid())
  title     String
  author    Author?  @relation("ArticleAuthor", fields: [authorId], references: [id])
  authorId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// M:N Relation (Implicit) (Category <-> Product)
model Category {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}

model Product {
  id         String     @id @default(cuid())
  name       String
  categories Category[]
}

// M:N Relation (Explicit) (Student <-> Course)
model Student {
  id      String             @id @default(cuid())
  name    String
  courses CourseEnrollment[]
}

model Course {
  id       String             @id @default(cuid())
  title    String
  students CourseEnrollment[]
}

model CourseEnrollment {
  student   Student @relation(fields: [studentId], references: [id])
  studentId String
  course    Course  @relation(fields: [courseId], references: [id])
  courseId  String
  grade     Float?

  @@id([studentId, courseId])
}

// Self Relations
model Employee {
  id           String     @id @default(cuid())
  name         String
  manager      Employee?  @relation("Manager", fields: [managerId], references: [id])
  managerId    String?
  subordinates Employee[] @relation("Manager")
}
